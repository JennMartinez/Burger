<div>
    <br>
    <h1>Barnyard Burger</h1>
    <hr style="border-color: rgb(240, 76, 0)">
    <br>
    <img src="/assets/images/steer.png" width="260px" height="160px">
</div>

<br><br><br><br>

<div class="card-deck">
    <div class="card rounded-0" id="one">
        <div class="card-body">
            <h5 class="card-title">Burger Menu</h5>
            <hr style="border-color: black">
            <p class="card-text">
                {{#each burger_name}}
                {{#unless devoured}}
                {{> burgers devoured=true}}
                {{/unless}}
                {{/each}}
                <button type="submit" id="submit_btn2" class="btn rounded-0">Inhale The Burger</button>
        </div>
    </div>

    <div class="card rounded-0" id="two">
        <div class="card-body">
            <h5 class="card-title">Inhaled Burgers</h5>
            <hr style="border-color: black">
            <p class="card-text">
                {{#each burger_name}}
                {{#if devoured}}
                {{> burgers devoured=false}}
                {{/if}}
                {{/each}}
        </div>
    </div>

    <div class="card rounded-0" id="three">
        <div class="card-body">
            <h5 class="card-title">Burger Orders</h5>
            <hr style="border-color: black">
            <form class="create-form">
                <div class="form-group">
                    <label id="form" for="new_burger">Burger:</label>
                    <input type="text" id="new_burger">
                </div>
                <button type="submit" id="submit_btn" class="btn rounded-0">Submit Order</button>
            </form>
        </div>
    </div>
</div>













<div>
    {{#each burger_data}}
    <p>
        {{this.id}}: {{this.burger_name}}
    </p>
    {{/each}}
</div>